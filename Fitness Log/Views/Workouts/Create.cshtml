@model Fitness_Log.Models.Workout

@{
    ViewData["Title"] = "Log Workout";
}

<h1>Log Workout</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Exercise</label>
        <input asp-for="Exercise" class="form-control" />
        <span asp-validation-for="Exercise" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Reps</label>
        <input asp-for="Reps" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label class="form-label">Duration (seconds)</label>
        <input asp-for="DurationSeconds" class="form-control" type="number" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}